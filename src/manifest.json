{
  "manifest_version": 3,
  "name": "Desktab - Quick visual tab manager",
  "version": "1.2.0",
  "description": "Tame tab clutter instantly. A visual grid to switch, search, and close tabs with Cmd+. Reduce RAM usage and find any tab in seconds.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Toggle DeskTab overlay"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Toggle DeskTab (Ctrl+.)"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
